@using System.Globalization

@model SalesWebMVC.Models.Seller;

@{
    ViewData["Title"] = this.ViewContext.RouteData.Values["action"].ToString();
}

<h1>@ViewData["Title"]</h1>
<h4>Seller</h4>

<div>
    <dl class="row">
        <dt class="col-sm-1">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-11">@Model.Name</dd>
        <dt class="col-sm-1">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-11">@Model.Email</dd>
        <dt class="col-sm-1">@Html.DisplayNameFor(model => model.BirthDate)</dt>
        <dd class="col-sm-11">@Model.BirthDate.ToShortDateString()</dd>
        <dt class="col-sm-1">@Html.DisplayNameFor(model => model.BaseSalary)</dt>
        <dd class="col-sm-11">@Model.BaseSalary.ToString("N2", CultureInfo.CurrentCulture)</dd>
        <dt class="col-sm-1">@Html.DisplayNameFor(model => model.Department)</dt>
        <dd class="col-sm-11">@Model.Department.Name</dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    <a asp-action="Index">Back to list</a>
</div>