@{
    ViewData["Title"] = this.ViewContext.RouteData.Values["controller"].ToString();
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal">
            <fieldset>
                <legend>Search</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary" asp-action="SimpleSearch">Simple Search </button>
                        <button type="submit" class="btn btn-primary" asp-action="GroupSearch">Group Search </button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>